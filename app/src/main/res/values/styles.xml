<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>


        <item name="uni_alpha_pressed">0.5</item>
        <item name="uni_alpha_disabled">1</item>

        <item name="uni_general_shadow_elevation">0dp</item>
        <item name="uni_general_shadow_alpha">1</item>

        <item name="uni_theme_color">@color/themePrimary</item>


    </style>

    <style name="UniPullRefreshLayout">
        <item name="uni_target_init_offset">0dp</item>
        <item name="uni_target_refresh_offset">72dp</item>
        <item name="uni_auto_calculate_refresh_init_offset">true</item>
        <item name="uni_auto_calculate_refresh_end_offset">true</item>
    </style>

    <style name="NoFrameNoDim_Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="More_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowAnimationStyle">@style/MoreDialogAnim</item>
    </style>

    <style name="MoreDialogAnim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/more_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/more_dialog_out</item>
    </style>

</resources>
