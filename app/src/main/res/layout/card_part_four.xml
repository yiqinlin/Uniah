<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/card_part_four_first"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@drawable/bg_press_select"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <com.uniah.mobile.view.UniRadiusView
                    android:id="@+id/card_part_four_first_img_bg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:uni_isCircle="true" />

                <ImageView
                    android:id="@+id/card_part_four_first_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/card_part_four_first_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:background="@drawable/msg_point_red"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/card_part_four_first_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/text_normal"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_part_four_second"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@drawable/bg_press_select"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <com.uniah.mobile.view.UniRadiusView
                    android:id="@+id/card_part_four_second_img_bg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:uni_isCircle="true" />

                <ImageView
                    android:id="@+id/card_part_four_second_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/card_part_four_second_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:background="@drawable/msg_point_red"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/card_part_four_second_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/text_normal"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_part_four_third"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@drawable/bg_press_select"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <com.uniah.mobile.view.UniRadiusView
                    android:id="@+id/card_part_four_third_img_bg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:uni_isCircle="true" />

                <ImageView
                    android:id="@+id/card_part_four_third_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/card_part_four_third_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:background="@drawable/msg_point_red"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/card_part_four_third_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/text_normal"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_part_four_fourth"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@drawable/bg_press_select"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <com.uniah.mobile.view.UniRadiusView
                    android:id="@+id/card_part_four_fourth_img_bg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:uni_isCircle="true" />

                <ImageView
                    android:id="@+id/card_part_four_fourth_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/card_part_four_fourth_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:background="@drawable/msg_point_red"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/card_part_four_fourth_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/text_normal"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>