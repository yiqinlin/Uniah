<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.uniah.mobile.layout.UniPullLayout
        android:id="@+id/pull_list_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:uni_equal_target_load_offset_to_load_view_height="true"
        app:uni_equal_target_refresh_offset_to_refresh_view_height="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pull_list_recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </com.uniah.mobile.layout.UniPullLayout>
</FrameLayout>