<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|start"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <com.uniah.mobile.layout.UniFrameLayout
            android:id="@+id/top_bar_btn_left_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/top_bar_btn_left_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />
        </com.uniah.mobile.layout.UniFrameLayout>

        <com.uniah.mobile.layout.UniFrameLayout
            android:id="@+id/top_bar_btn_left_sub_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/top_bar_btn_left_sub_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />
        </com.uniah.mobile.layout.UniFrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/top_bar_title"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <com.uniah.mobile.layout.UniFrameLayout
            android:id="@+id/top_bar_btn_right_sub_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/top_bar_btn_right_sub_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />
        </com.uniah.mobile.layout.UniFrameLayout>

        <com.uniah.mobile.layout.UniFrameLayout
            android:id="@+id/top_bar_btn_right_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/top_bar_btn_right_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />
        </com.uniah.mobile.layout.UniFrameLayout>
    </LinearLayout>

</LinearLayout>