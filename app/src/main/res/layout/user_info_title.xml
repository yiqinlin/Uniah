<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:orientation="horizontal">


    <com.uniah.mobile.view.UniRadiusView
        android:id="@+id/user_info_title_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        app:uni_isCircle="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="9dp"
        android:paddingRight="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/user_info_title_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:textColor="@color/text_dark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.uniah.mobile.alpha.UniAlphaImageButton
                android:id="@+id/user_info_title_badge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:background="@null"
                android:src="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_info_title_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/user_info_title_uni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:textColor="@color/text_light"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <com.uniah.mobile.layout.UniFrameLayout
        android:id="@+id/user_info_title_more"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/user_info_title_more_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_home_black_24dp" />
    </com.uniah.mobile.layout.UniFrameLayout>
</LinearLayout>