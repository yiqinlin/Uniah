<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.uniah.mobile.layout.UniLinearLayout
        android:id="@+id/mine_head_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mine_head_user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_press_select"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="6dp"
            android:paddingBottom="12dp">

            <com.uniah.mobile.view.UniRadiusView
                android:id="@+id/mine_head_user_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@color/view_press"
                app:uni_isCircle="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="28dp">

                    <TextView
                        android:id="@+id/mine_head_user_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mid_list_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_tip_round_grey"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingTop="1dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="1dp"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/mine_head_user_slogan"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/text_grey"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.uniah.mobile.layout.UniFrameLayout
                android:id="@+id/user_info_title_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/user_info_title_more_img"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_dashboard_black_24dp"
                    android:scaleType="fitCenter" />
            </com.uniah.mobile.layout.UniFrameLayout>

        </LinearLayout>

    </com.uniah.mobile.layout.UniLinearLayout>
</LinearLayout>