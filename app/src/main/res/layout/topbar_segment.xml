<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/top_bar">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|start">

        <include layout="@layout/tab_segment"
            android:layout_height="48dp"
            android:layout_width="88dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:gravity="end">
        <com.uniah.mobile.layout.UniFrameLayout
            android:id="@+id/top_bar_btn_right_sub_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone">
            <ImageView
                android:id="@+id/top_bar_btn_right_sub_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"/>
        </com.uniah.mobile.layout.UniFrameLayout>
        <com.uniah.mobile.layout.UniFrameLayout
            android:id="@+id/top_bar_btn_right_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/top_bar_btn_right_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"/>
        </com.uniah.mobile.layout.UniFrameLayout>
    </LinearLayout>

</LinearLayout>