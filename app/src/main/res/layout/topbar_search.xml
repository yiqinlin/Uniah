<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_linear"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|start">
        <FrameLayout
            android:id="@+id/top_bar_btn_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <ImageView
                android:id="@+id/top_bar_btn_left_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@drawable/bg_query"
        android:layout_gravity="center_vertical">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"/>
        </FrameLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="@null"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_grey"
            android:textSize="14sp"
            android:textCursorDrawable="@drawable/cursor_edit"
            android:hint="搜索"
            android:layout_marginEnd="8dp"
            android:singleLine="true"
            android:maxLines="1"
            android:id="@+id/top_bar_edit"
            android:imeOptions="actionSearch"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="end">
        <FrameLayout
            android:id="@+id/top_bar_text_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:id="@+id/top_bar_btn_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="18dp"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>