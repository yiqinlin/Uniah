<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.uniah.mobile.layout.UniLinearLayout
        android:id="@+id/item_group_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        app:uni_radius="9dp"
        app:uni_shadowAlpha="0.1"
        app:uni_shadowElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_press_select"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="6dp"
            android:paddingBottom="12dp">

            <com.uniah.mobile.view.UniRadiusView
                android:id="@+id/item_group_user_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@color/view_press"
                app:uni_isCircle="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_group_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/item_group_user_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_tip_round_grey"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingTop="1dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="1dp"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/item_group_user_slogan"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/text_grey"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.uniah.mobile.layout.UniFrameLayout
                android:id="@+id/item_group_user_sub_img_layout"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/item_group_user_sub_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />
            </com.uniah.mobile.layout.UniFrameLayout>

            <com.uniah.mobile.layout.UniFrameLayout
                android:id="@+id/item_group_user_arrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_grey"
                    android:scaleType="fitCenter" />
            </com.uniah.mobile.layout.UniFrameLayout>

        </LinearLayout>

        <View
            android:id="@+id/item_group_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@color/item_line" />
    </com.uniah.mobile.layout.UniLinearLayout>
</LinearLayout>